<%= link_to animals_path, class: 'btn btn-secondary mt-3 retour', style: 'border-radius: 50px;' do %>
  <i class="fas fa-arrow-left"></i> Back to pet list
<% end %>

<div class="container mb-4">
  <h1 class="text-left pt-4 my-4"><%= @animal.nom %></h1>
  <div class="row align-items-start"> <!-- Add align-items-start class here -->

    <div class="col-md-6">
      <div class="animal-info">
        <p><strong>Espèce:</strong> <%= @animal.especes.capitalize %></p>
        <p><strong>Âge:</strong> <%= @animal.age %> ans</p>
        <p><strong>Localisation:</strong> <%= @animal.localisation %></p>
        <p><strong>Prix:</strong> <%= number_to_currency(@animal.prix, locale: :fr) %></p>
      </div>
      <%= form_with model: [@animal, Reservation.new], local: true, class: 'mt-3' do |form| %>
        <div class="form-group">
          <%= form.label :date_debut, "Date de début" %>
          <%= form.date_field :date_debut, class: 'form-control', style: 'width: 100%; max-width: 300px; border-radius: 50px;' %>
        </div>
        <div class="form-group">
          <%= form.label :date_fin, "Date de fin" %>
          <%= form.date_field :date_fin, class: 'form-control', style: 'width: 100%; max-width: 300px; border-radius: 50px;' %>
        </div>
        <%= form.submit 'Réserver cet animal', class: 'btn btn-primary reserver', style: 'border-radius: 50px;' %>
      <% end %>
    </div>

    <div class="col-md-6 d-flex justify-content-end mb-4">
      <%= image_tag @animal.photo_url, alt: @animal.nom, class: 'img-fluid rounded shadow-sm image-right' %>
    </div>

  </div>
</div>

<!-- footer -->
<%= render 'shared/footer' %>
