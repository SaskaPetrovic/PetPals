<h1 class="text-center mb-4"><%= @animal.nom %></h1>
<div class="container">
  <div class="row">
    <div class="col-md-6 d-flex justify-content-center mb-4">
      <%= image_tag @animal.photo_url, alt: @animal.nom, class: 'img-fluid rounded shadow-sm' %>
    </div>
    <div class="col-md-6">
      <div class="animal-info">
        <p><strong>Espèce:</strong> <%= @animal.especes.capitalize %></p>
        <p><strong>Âge:</strong> <%= @animal.age %> ans</p>
        <p><strong>Localisation:</strong> <%= @animal.localisation %></p>
        <p><strong>Prix:</strong> <%= number_to_currency(@animal.prix, locale: :fr) %></p>
      </div>

      <%= form_with model: [@animal, Reservation.new], local: true, class: 'mt-3' do |form| %>
        <div class="form-group">
          <%= form.label :date_debut, "Date de début" %>
          <%= form.date_field :date_debut, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= form.label :date_fin, "Date de fin" %>
          <%= form.date_field :date_fin, class: 'form-control' %>
        </div>

        <%= form.submit 'Réserver cet animal', class: 'btn btn-primary' %>
      <% end %>
      <%= link_to 'Retour à la liste des animaux', animals_path, class: 'btn btn-secondary mt-2' %>
    </div>
  </div>
</div>
