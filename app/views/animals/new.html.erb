<h1>Rent a new pet</h1>

<%= form_with(model: @animal, local: true) do |form| %>
  <div>
    <%= form.label :nom %>
    <%= form.text_field :nom %>
  </div>

  <div>
    <%= form.label :especes %>
    <%= form.select :especes, ['Cat','Dog','Fish','Reptile','Rodent','Bird']%>
  </div>

  <div>
    <%= form.label :age %>
    <%= form.number_field :age %>
  </div>

  <div>
    <%= form.label :localisation %>
    <%= form.text_field :localisation %>
  </div>

  <div>
    <%= form.label :prix %>
    <%= form.number_field :prix %>
  </div>

    <%= form.submit %>
  </div>
<% end %>

<%= link_to "Dashboard", dashboard_path %>

<%= link_to "All Animals", animals_path %>
