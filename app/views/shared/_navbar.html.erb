<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
     <%= link_to "#", class: "navbar-brand" do %>
    <div class= "logo-css">
      <%= image_tag "icons/pawprint_logo.png" %>
      <h1>PetPals</h1>
    </div>
  <% end %>

<section class="search">
  <div class="container text-center">
    <form class="d-flex justify-content-center" method="get" action="<%= filtered_animals_path %>">
      <div class="input-group mb-2" style="max-width: 600px; width: 100%;">
        <select name="localisation" class="form-control" style="max-width: 200px;">
          <option value="">Select Region</option>
          <% Animal.distinct.pluck(:localisation).sort.each do |localisation| %>
            <option value="<%= localisation %>" <%= 'selected' if params[:localisation] == localisation %>><%= localisation %></option>
          <% end %>
        </select>
        <div class="input-group-append">
          <button type="submit" class="btn btn-primary">Search</button>
        </div>
      </div>
    </form>
  </div>
</section>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <li class="nav-item active">
            <%= link_to "Home", "#", class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Let your pet", "#", class: "nav-link offre"%>
          </li>
          <li class="nav-item dropdown">
          <a href="#" class="avatar" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <%= image_tag "https://cdn.icon-icons.com/icons2/1949/PNG/512/free-30-instagram-stories-icons53_122600.png", class: "avatar", alt: "dropdown menu" %>
          </a>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to 'Dashboard', dashboard_path, class: "dropdown-item" %>
              <%= link_to "Messages", "#", class: "dropdown-item" %>
              <%= link_to "Notifications", "#", class: "dropdown-item" %>
              <%= link_to "Animaux", "#", class: "dropdown-item" %>
              <%= link_to "Favoris", "#", class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
